@page
@model GadgetHub2.Web.Pages.Products.IndexModel
@{

    ViewData["Title"] = "Products";

    <h2>Products</h2>

    <a asp-page="CreateProduct" class="btn btn-success mb-3">Add Product</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Price ($)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model.Products)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price</td>
                    <td>
                        <a asp-page="EditProduct" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this customer?');">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>

}


