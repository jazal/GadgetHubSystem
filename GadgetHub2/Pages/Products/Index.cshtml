@page
@using GadgetHub.Web.Pages.Products
@model GadgetHub.Web.Pages.Products.IndexModel

@{
    ViewData["Title"] = "Product List";
}

<h2 class="mb-3">Product List</h2>

<!-- Button to add a new product -->
<a class="btn btn-success mb-3" asp-page="Create">➕ Add New Product</a>

<!-- Table displaying the list of products -->
<table class="table table-bordered table-hover align-middle">
    <thead class="table-dark">
        <tr>
            <th>Image</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Created On</th>
            <th>Actions</th>
            <th>Quote</th>
        </tr>
    </thead>
    <tbody>
        <!-- ✅ Null check to avoid crash when Products is empty -->
        @if (Model.Products != null && Model.Products.Any())
        {
            @foreach (var product in Model.Products)
            {
                <tr>
                    <!-- ✅ Show product image or default -->
                    <td>
                        <img src="@(!string.IsNullOrEmpty(product.ImageUrl) ? product.ImageUrl : "/images/products/default.png")"
                             alt="@product.Name"
                             width="80"
                             height="80"
                             style="object-fit:cover; border-radius:8px;" />
                    </td>

                    <td>@product.Name</td>
                    <td>@product.Description</td>

                    <!-- ✅ Format price in LKR -->
                    <td>@($"LKR {product.Price?.ToString("N2")}")</td>

                    <!-- ✅ Show formatted date -->
                    <td>@(product.CreatedOn?.ToString("yyyy-MM-dd") ?? "N/A")</td>

                    <!-- ✅ Action buttons -->
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@product.Id">Edit</a>

                        <!-- ✅ Change to POST for delete -->
                        <form method="post" asp-page-handler="Delete" asp-route-id="@product.Id" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?');">
                                Delete
                            </button>
                        </form>
                    </td>

                    <!-- View Quotations -->
                    <td>
                        <a class="btn btn-info btn-sm"
                           asp-page="/Quotations/Index"
                           asp-route-ProductId="@product.Id"
                           asp-route-Quantity="1">
                            View Quotations
                        </a>
                    </td>
                </tr>
            }
        }
        else
        {
            <!-- ✅ Show message when no products -->
            <tr>
                <td colspan="7" class="text-center text-muted">No products found.</td>
            </tr>
        }
    </tbody>
</table>
