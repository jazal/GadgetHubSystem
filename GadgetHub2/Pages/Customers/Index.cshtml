@page
@using GadgetHub.Web.Pages.Customers
@model GadgetHub.Web.Pages.Customers.IndexModel
@{

    <h2>Customer List</h2>

    <a class="btn btn-success" asp-page="Create">Add New Customer</a>

    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>User Type</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@customer.Name</td>
                    <td>@customer.Email</td>
                    <td>@(customer.UserType == 2 ? "Customer" : "Other")</td>
                    <td>
                        <a class="btn btn-primary btn-sm" asp-page="Edit" asp-route-id="@customer.Id">Edit</a>
                        <form method="post" asp-page-handler="Delete" asp-route-id="@customer.Id" style="display:inline">
                            <button type="submit" class="btn btn-danger btn-sm"
                                    onclick="return confirm('Are you sure you want to delete this customer?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
