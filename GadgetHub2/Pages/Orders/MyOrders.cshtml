@page
@using GadgetHub.Web.Pages.Orders
@model GadgetHub.Web.Pages.Orders.MyOrdersModel

<h2 class="mb-3">My Orders</h2>

@if (!Model.Orders.Any())
{
    <div class="alert alert-info">No orders found.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Order ID</th>
                <th>Customer ID</th>
                <th>Total Amount</th>
                <th>Created On</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model.Orders)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.CustomerId</td>
                    <td>@order.TotalAmount</td>
                    <td>
                        @(order.CreatedOn.HasValue? order.CreatedOn.Value.ToString("yyyy-MM-dd"): "N/A")
            </td>
                    <td>
                        @switch (order.OrderStatus)
                        {
                            case 1:
                                <span class="badge bg-warning">Pending</span>
                                ; break;
                            case 2:

                                <span class="badge bg-info">Processing</span>
                                ; break;
                            case 3:

                                <span class="badge bg-success">Completed</span>
                                ; break;
                            default:

                                <span class="badge bg-secondary">Unknown</span>
                                ; break;
                        }
                        <a asp-page="/Orders/Details" asp-route-id="@order.OrderId" class="btn btn-sm btn-primary">View Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
