@page
@model GadgetHub2.WEB.Pages.Cart.IndexModel

<h2>Your Cart</h2>

@if (Model.CartItems.Count == null )
{
    <p>Your cart is empty.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Product</th>
                <th>Quantity</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.CartItems)
            {
                <tr>
                    <td>@item.ProductName</td>
                    <td>@item.Quantity</td>
                </tr>
            }
        </tbody>
    </table>

    <form method="post" asp-page="page/Cart/Checkout">
        <button type="submit" class="btn btn-primary">Get Quotations</button>
    </form>
}
